<div class="item">
  <div class="item-text">
    <h2><%= item.name %></h2>
    <div class="price-category-box">
      <% let categoryAssigned = false; %> <% for (const category of categories)
      { %> <% if (category.id === item.categoryId) { %>
      <p>Category: <%= category.name %></p>
      <% categoryAssigned = true; %> <% break; %> <% } %> <% } %> <% if
      (!categoryAssigned) { %>
      <p>No category assigned</p>
      <% } %>
      <p>Price: <%= item.price %>$</p>
    </div>

    <p class="item-description"><%= item.description %></p>
  </div>
  <div class="item-buttons">
    <a href="/items/<%= item.id %>/edit"
      ><svg
        xmlns="http://www.w3.org/2000/svg"
        width="30"
        height="30"
        viewBox="0 0 24 24"
        style="fill: orange; transform: ; msfilter: "
      >
        <path
          d="m18.988 2.012 3 3L19.701 7.3l-3-3zM8 16h3l7.287-7.287-3-3L8 13z"
        ></path>
        <path
          d="M19 19H8.158c-.026 0-.053.01-.079.01-.033 0-.066-.009-.1-.01H5V5h6.847l2-2H5c-1.103 0-2 .896-2 2v14c0 1.104.897 2 2 2h14a2 2 0 0 0 2-2v-8.668l-2 2V19z"
        ></path></svg
    ></a>

    <button itemid="<%= item.id %>" class="delete-btn">
      <svg
        xmlns="http://www.w3.org/2000/svg"
        width="30"
        height="30"
        viewBox="0 0 24 24"
        style="fill: red; transform: ; msfilter: "
      >
        <path
          d="M6 7H5v13a2 2 0 0 0 2 2h10a2 2 0 0 0 2-2V7H6zm10.618-3L15 2H9L7.382 4H3v2h18V4z"
        ></path>
      </svg>
    </button>
  </div>
</div>
