<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="stylesheet" href="/stylesheets/style.css" />
    <title>All Categories</title>
  </head>
  <body>
    <%- include('header', { links }) %>
    <h1>All categories</h1>
    <% categories.map((category) => {%>

    <div>
      <h2><%= category.name %></h2>
      <a href="/categories/<%= category.id %>/edit">Edit this category</a>
      <button categoryId="<%= category.id %>">Delete</button>
    </div>
    <% })%>

    <a href="/categories/new">Create a new category</a>
    <script>
      const allDeleteButtons = document.querySelectorAll("button");

      allDeleteButtons.forEach((button) => {
        button.addEventListener("click", (e) => {
          const categoryId = button.getAttribute("categoryId");

          if (confirm("Are you sure you want to delete this category?")) {
            // Send a DELETE request to the server
            fetch(`/categories/${categoryId}/delete`, {
              method: "POST",
            })
              .then((response) => {
                if (response.ok) {
                  // Remove the category from the DOM if successfully deleted
                  // button.closest('div').remove();
                } else {
                  alert("Failed to delete category. Please try again.");
                }
              })
              .catch((error) => {
                console.error("Error:", error);
                alert("An error occurred while deleting the category.");
              });
          }
        });
      });
    </script>
  </body>
</html>
